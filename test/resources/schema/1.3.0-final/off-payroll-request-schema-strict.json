{
  "publicId": "https://raw.githubusercontent.com/hmrc/off-payroll-decision/master/test/resources/schema/off-payroll-request-schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Decision Request Version 1.3.0-final",
  "definitions": {
    "binaryAnswer": {
      "type": "string",
      "enum": [
        "Yes",
        "No"
      ]
    }
  },
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]{1,2}[.][0-9]{1,2}[.][0-9]{1,2}-?[a-zA-Z-_]*$"
    },
    "correlationID": {
      "type": "string"
    },
    "interview": {
      "type": "object",
      "properties": {
        "personalService": {
          "type": "object",
          "properties": {
            "workerSentActualSubstitute": {
              "type": "string",
              "enum": [
                "yesClientAgreed",
                "notAgreedWithClient",
                "noSubstitutionHappened"
              ]
            },
            "workerPayActualSubstitute": {
              "$ref": "#/definitions/binaryAnswer"
            },
            "possibleSubstituteRejection": {
              "type": "string",
              "enum": [
                "wouldNotReject",
                "wouldReject"
              ]
            },
            "possibleSubstituteWorkerPay": {
              "$ref": "#/definitions/binaryAnswer"
            },
            "wouldWorkerPayHelper": {
              "$ref": "#/definitions/binaryAnswer"
            }
          },
          
          "additionalProperties": false,
          "required": [
            "workerSentActualSubstitute",
            "workerPayActualSubstitute",
            "possibleSubstituteRejection",
            "possibleSubstituteWorkerPay",
            "wouldWorkerPayHelper"
          ]
        },
        "control": {
          "type": "object",
          "properties": {
            "engagerMovingWorker": {
              "type": "string",
              "enum": [
                "canMoveWorkerWithPermission",
                "canMoveWorkerWithoutPermission",
                "cannotMoveWorkerWithoutNewAgreement"
              ]
            },
            "workerDecidingHowWorkIsDone": {
              "type": "string",
              "enum": [
                "workerDecidesWithoutInput",
                "workerAgreeWithOthers",
                "noWorkerInputAllowed",
                "workerFollowStrictEmployeeProcedures"
              ]
            },
            "whenWorkHasToBeDone": {
              "type": "string",
              "enum": [
                "workerDecideSchedule",
                "workerAgreeSchedule",
                "scheduleDecidedForWorker",
                "noScheduleRequiredOnlyDeadlines"
              ]
            },
            "workerDecideWhere": {
              "type": "string",
              "enum": [
                "workerChooses",
                "workerCannotChoose",
                "workerAgreeWithOthers",
                "noLocationRequired"
              ]
            }
          },
          
          "additionalProperties": false,
          "required": [
            "engagerMovingWorker",
            "workerDecidingHowWorkIsDone",
            "whenWorkHasToBeDone",
            "workerDecideWhere"
          ]
        },
        "financialRisk": {
          "type": "object",
          "properties": {
            "workerProvidedMaterials": {
              "$ref": "#/definitions/binaryAnswer"
            },
            "workerProvidedEquipment": {
              "$ref": "#/definitions/binaryAnswer"
            },
            "workerUsedVehicle": {
              "$ref": "#/definitions/binaryAnswer"
            },
            "workerHadOtherExpenses": {
              "$ref": "#/definitions/binaryAnswer"
            },
            "expensesAreNotRelevantForRole": {
              "$ref": "#/definitions/binaryAnswer"
            },
            "workerMainIncome": {
              "type": "string",
              "enum": [
                "incomeCalendarPeriods",
                "incomeFixed",
                "incomePieceRate",
                "incomeCommission",
                "incomeProfitOrLosses"
              ]
            },
            "paidForSubstandardWork": {
              "type": "string",
              "enum": [
                "outsideOfHoursNoCharge",
                "outsideOfHoursNoCosts",
                "asPartOfUsualRateInWorkingHours",
                "cannotBeCorrected",
                "noObligationToCorrect"
              ]
            }
          },
          
          "additionalProperties": false,
          "required": [
            "workerProvidedMaterials",
            "workerProvidedEquipment",
            "workerUsedVehicle",
            "workerHadOtherExpenses",
            "expensesAreNotRelevantForRole",
            "workerMainIncome",
            "paidForSubstandardWork"
          ]
        },
        "partAndParcel": {
          "type": "object",
          "properties": {
            "workerReceivesBenefits": {
              "$ref": "#/definitions/binaryAnswer"
            },
            "workerAsLineManager": {
              "$ref": "#/definitions/binaryAnswer"
            },
            "contactWithEngagerCustomer": {
              "$ref": "#/definitions/binaryAnswer"
            },
            "workerRepresentsEngagerBusiness": {
              "type": "string",
              "enum": [
                "workForEndClient",
                "workAsIndependent",
                "workAsBusiness"
              ]
            }
          },
          
          "additionalProperties": false,
          "required": [
            "workerReceivesBenefits",
            "workerAsLineManager",
            "contactWithEngagerCustomer",
            "workerRepresentsEngagerBusiness"
          ]
        }
      },
      
      "additionalProperties": false,
      "required": [
        "personalService",
        "control",
        "financialRisk",
        "partAndParcel"
      ]
    }
  },
  "required": [
    "version",
    "correlationID",
    "interview"
  ],
  "additionalProperties": false
}